<h1>Carreiras</h1>

{{#if isTeacher}}
<div class="d-flex justify-content-around">
<a href="/new/career"><button class="btn btn-primary">Criar nova carreira</button></a>
{{/if}}

<form action="/careers" method="post">
    <div class="input-group mb-3">
        <input type="text" class="form-control" name="careerName" placeholder="Digite a carreira que gostaria de encontrar">
        <button type="submit" class="btn btn-primary">Buscar Carreira</button>
    </div>
</form>
</div>


{{#if careers}}
<div class="item-list">
    {{#each careers}}
        <div class="card content-card" style="width: 15rem;">
            <img src="{{this.image}}" class="card-img-top item-img" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.description}}</p>
                <a href="/careers/{{this._id}}" class="btn btn-primary">Ver detalhes</a>
            </div>
        </div>
    {{/each}}
</div>
{{else}}
    <h1>Nenhuma carreira encontrada. Tente novamente.</h1>
{{/if}}