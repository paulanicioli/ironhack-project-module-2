<h1>Pais</h1>
<div class="d-flex justify-content-between">
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    Filtrar por s√©rie        
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            {{#each gradesValues}}
                <li><a class="dropdown-item" href="/parents?grade={{this.value}}">{{this.text}}</a></li>
            {{/each}}
        </ul>
    </div>
    
    <a href="/new/parent"><button class="btn btn-primary">Criar novo pai</button></a>

    <form action="/parents" method="post">
        <div class="input-group mb-3 w-100">
            <input type="text" class="form-control" name="parentName" placeholder="Nome do pai">
            <button type="submit" class="btn btn-primary">Buscar Pai</button>
        </div>
    </form>
</div>


{{#if parents}}
<div class="item-list">
    {{#each parents}}
        <div class="card content-card" style="width: 15rem;">
            <img src="{{this.profilePicture}}" class="card-img-top item-img" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.firstName}} {{this.lastName}}</h5>
                <p class="card-text">
                    {{#if this.children}}
                        Filhos:
                        {{#each this.children}}
                            <li>{{this.firstName}} {{this.lastName}} - {{this.grade}}</li>
                        {{/each}}
                    {{/if}}
                </p>
                <a href="/parents/{{this._id}}" class="btn btn-primary">Ver detalhes</a>
            </div>
        </div>
    {{/each}}
</div>
{{else}}
    <h1>Nenhum pai encontrado. Tente novamente.</h1>
{{/if}}