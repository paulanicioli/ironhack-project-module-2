<h1>Alunos</h1>

<div class="d-flex justify-content-between">
    <div class="dropdown">
        <button class="btn btn-secondary" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Série: <span>Todas</span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-filter filter-icon" viewBox="0 0 16 16">
                <path d="M6 10.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z"/>
            </svg>     
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item active" href="/students">Todas as séries</a></li>
            <li><hr class="dropdown-divider"></li>
            {{#each gradesValues}}
                <li><a class="dropdown-item" href="/students?grade={{this.value}}">{{this.text}}</a></li>
            {{/each}}
        </ul>
    </div>

    <div class="dropdown">
        <button class="btn btn-secondary" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
            Status: <span>Todos</span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-filter filter-icon" viewBox="0 0 16 16">
                <path d="M6 10.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z"/>
            </svg>    
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
            <li><a class="dropdown-item active" href="/courses">Todos os alunos</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/courses?active=true">Usuários ativos</a></li>
            <li><a class="dropdown-item" href="/courses?active=false">Usuários desativados</a></li>
        </ul>
    </div>

<a href="/new/student"><button class="btn btn-primary">Criar novo aluno</button></a>

<form action="/students" method="post">
    <div class="input-group mb-3">
        <input type="text" class="form-control" name="studentName" placeholder="Nome do aluno">
        <button type="submit" class="btn btn-primary">Buscar Aluno</button>
    </div>
</form>
</div>

{{#if students}}
<div class="item-list">
    {{#each students}}
        <div class="card content-card" style="width: 15rem;">
            <img src="{{this.profilePicture}}" class="card-img-top item-img" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.firstName}} {{this.lastName}}</h5>
                <p class="card-text reduce-text-size">{{this.grade_text}}</p>
                <a href="/students/{{this._id}}" class="btn btn-primary">Ver detalhes</a>
            </div>
        </div>
    {{/each}}
</div>
{{else}}
    <h1>Nenhum aluno encontrado. Tente novamente.</h1>
{{/if}}