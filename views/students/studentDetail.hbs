<h4>{{student.firstName}} {{student.lastName}}</h4>
<div class="content-container">
  <img class="content-img" src="{{student.profilePicture}}" alt="{{student.firstName}} image">
  <div><h5>Email: <span>{{student.email}}</span></h5>
  <h5>Data de nascimento: <span>{{birthDateFormatted}}</span></h5>
  <h5>Série: <span>{{student.grade}}</span></h5>
  <h5>Pais:
    {{#if parents}}
      <ul>
      {{#each parents}}
        <li>
          <a href="/parents/{{this._id}}">{{this.firstName}} {{this.lastName}} - {{this.email}} </a>
        </li>
      {{/each}}
      </ul>
    {{/if}}
  </h5>
  <a href="/new/parent?studentId={{student._id}}"><button class="btn btn-primary">Adicionar pai/mãe</button></a>
  </div>
</div>


{{#if isTeacher}}
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editStudent">
  Editar aluno
</button>

<!-- Modal -->
<div class="modal fade" id="editStudent" tabindex="-1" aria-labelledby="editStudentLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editStudentLabel">Editar conta de {{student.firstName}} {{student.lastName}}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/students/{{student._id}}/edit" method="post" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="row g-3">
            <div class="col-md-6">
              <input type="text" class="form-control" placeholder="Nome" name="studentFirstName" value={{student.firstName}}>
            </div>
            <div class="col-md-6">
              <input type="text" class="form-control" placeholder="Sobrenome" name="studentLastName" value={{student.lastName}}>
            </div>
            <div class="col-md-6">
              <input type="email" class="form-control" placeholder="Email" name="studentEmail" value={{student.email}}>
            </div>
            <div class="col-md-6">
              <input type="date" class="form-control" placeholder="Data de nascimento" name="studentBirthDate" value={{birthDateFormatted}}>
            </div>
            <div class="mb-3">
              <input type="file" class="form-control" placeholder="Foto do aluno" name="studentImage">
            </div>
            <div class="mb-3" id="studentGradeInput">
        <label for="studentGrade" class="form-label">Série que o aluno cursa atualmente:</label>
        <select class="form-select" name="studentGrade">
          {{#each gradesValues}}
            <option value={{this.value}}>{{this.text}}</option>
          {{/each}}
        </select>
      </div>
    </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
          <button type="submit" class="btn btn-primary">Salvar alterações</button>
        </div>
      </form>
    </div>
  </div>
</div>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#deleteStudent">
  Deletar aluno
</button>

<div class="modal fade" id="deleteStudent" tabindex="-1" aria-labelledby="deleteStudentLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteStudentLabel">Deletar {{student.firstName}} {{student.lastName}}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/students/{{student._id}}/delete" method="post">
        <div class="modal-body">
        <p>Tem certeza de que deseja remover o aluno {{student.firstName}} {{student.lastName}} do {{student.grade}} da plataforma?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-primary">Deletar</button>
        </div>
      </form>
    </div>
  </div>
</div>

{{/if}}